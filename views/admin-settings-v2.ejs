<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Settings - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/admin-settings-v2.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/admin-navbar', { activePage: 'settings' }) %>

        <div class="settings-layout">
            <!-- Sidebar -->
            <aside class="settings-sidebar">
                <div class="mb-4 px-2">
                    <h5 class="mb-1 fw-bold">Settings</h5>
                    <p class="text-muted-v2 small mb-0">Manage your AI & System</p>
                </div>

                <div class="nav-section-title">AI & Automation</div>
                <nav class="nav flex-column mb-4">
                    <a href="#bot-settings" class="nav-item-v2 active">
                        <i class="fas fa-robot"></i> Bot Management
                    </a>
                    <a href="#chat-settings" class="nav-item-v2">
                        <i class="fas fa-comments"></i> Chat & Queue
                    </a>
                    <a href="#image-collections" class="nav-item-v2">
                        <i class="fas fa-images"></i> Image Collections
                    </a>
                </nav>

                <div class="nav-section-title">System</div>
                <nav class="nav flex-column">
                    <a href="#system-settings" class="nav-item-v2">
                        <i class="fas fa-server"></i> General System
                    </a>
                    <a href="#security-settings" class="nav-item-v2">
                        <i class="fas fa-shield-alt"></i> Security & Filter
                    </a>
                </nav>

                <div class="mt-auto px-2 pt-4 border-top">
                    <a href="/admin/dashboard" class="btn-v2 btn-v2-secondary w-100 justify-content-center">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </aside>

            <!-- Content -->
            <main class="settings-content">

                <!-- Bot Management Section -->
                <section id="bot-settings" class="settings-section">
                    <div class="section-header">
                        <div>
                            <h2 class="section-title">Bot Management</h2>
                            <p class="section-desc">Manage your Line and Facebook bots, their status, and AI models.</p>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn-v2 btn-v2-secondary btn-v2-sm" onclick="loadBotSettings()">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="settings-card">
                                <div class="card-header-v2">
                                    <h3 class="card-title-v2"><i class="fab fa-line text-success me-2"></i>Line Bots
                                    </h3>
                                    <button class="btn-v2 btn-v2-primary btn-v2-sm" data-bs-toggle="modal"
                                        data-bs-target="#addLineBotModal">
                                        <i class="fas fa-plus"></i> Add New
                                    </button>
                                </div>
                                <div class="card-body-v2 p-0">
                                    <div id="line-bots-list" class="p-3">
                                        <!-- Line Bots Rendered Here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="settings-card">
                                <div class="card-header-v2">
                                    <h3 class="card-title-v2"><i class="fab fa-facebook text-primary me-2"></i>Facebook
                                        Bots</h3>
                                    <button class="btn-v2 btn-v2-primary btn-v2-sm" data-bs-toggle="modal"
                                        data-bs-target="#addFacebookBotModal">
                                        <i class="fas fa-plus"></i> Add New
                                    </button>
                                </div>
                                <div class="card-body-v2 p-0">
                                    <div id="facebook-bots-list" class="p-3">
                                        <!-- Facebook Bots Rendered Here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Chat Settings Section -->
                <section id="chat-settings" class="settings-section d-none">
                    <div class="section-header">
                        <div>
                            <h2 class="section-title">Chat & Queue Settings</h2>
                            <p class="section-desc">Configure response delays, queue limits, and auto-replies.</p>
                        </div>
                    </div>

                    <div class="settings-card">
                        <div class="card-header-v2">
                            <h3 class="card-title-v2">Queue Configuration</h3>
                        </div>
                        <div class="card-body-v2">
                            <form id="chatSettingsForm">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-group-v2">
                                            <label class="form-label-v2" for="chatDelaySeconds">Response Delay
                                                (Seconds)</label>
                                            <input type="number" class="form-control-v2" id="chatDelaySeconds" min="0"
                                                max="60">
                                            <div class="form-text-v2">Wait time before processing messages to group
                                                them.</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-v2">
                                            <label class="form-label-v2" for="maxQueueMessages">Max Queue Size</label>
                                            <input type="number" class="form-control-v2" id="maxQueueMessages" min="1"
                                                max="50">
                                            <div class="form-text-v2">Process immediately if queue reaches this size.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div
                                            class="form-group-v2 d-flex align-items-center justify-content-between border p-3 rounded">
                                            <div>
                                                <label class="form-label-v2 mb-0" for="enableMessageMerging">Merge
                                                    Messages</label>
                                                <div class="form-text-v2 mt-0">Combine consecutive messages into one
                                                    prompt.</div>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="enableMessageMerging">
                                                <span class="toggle-slider"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div
                                            class="form-group-v2 d-flex align-items-center justify-content-between border p-3 rounded">
                                            <div>
                                                <label class="form-label-v2 mb-0" for="showTokenUsage">Show Token
                                                    Usage</label>
                                                <div class="form-text-v2 mt-0">Append token stats to AI responses.</div>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="showTokenUsage">
                                                <span class="toggle-slider"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group-v2">
                                            <label class="form-label-v2" for="audioAttachmentResponse">Audio
                                                Auto-Reply</label>
                                            <textarea class="form-control-v2" id="audioAttachmentResponse"
                                                rows="2"></textarea>
                                            <div class="form-text-v2">Message sent when user sends an audio clip (if not
                                                supported).</div>
                                        </div>
                                    </div>
                                    <div class="col-12 text-end">
                                        <button type="submit" class="btn-v2 btn-v2-primary">
                                            <i class="fas fa-save"></i> Save Changes
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

                <!-- Image Collections Section -->
                <section id="image-collections" class="settings-section d-none">
                    <div class="section-header">
                        <div>
                            <h2 class="section-title">Image Collections</h2>
                            <p class="section-desc">Manage image assets for your bots to use in responses.</p>
                        </div>
                        <button class="btn-v2 btn-v2-primary btn-v2-sm">
                            <i class="fas fa-plus"></i> New Collection
                        </button>
                    </div>

                    <div class="settings-card">
                        <div class="card-body-v2 text-center py-5">
                            <div class="text-muted-v2 mb-3">
                                <i class="fas fa-images fa-3x"></i>
                            </div>
                            <h5>Image Collection Management</h5>
                            <p class="text-muted-v2">This feature is being redesigned for V2. Please use the legacy
                                settings for now.</p>
                            <a href="/admin/settings" class="btn-v2 btn-v2-secondary">Go to Legacy Settings</a>
                        </div>
                    </div>
                </section>

                <!-- System Settings Section -->
                <section id="system-settings" class="settings-section d-none">
                    <div class="section-header">
                        <div>
                            <h2 class="section-title">System Settings</h2>
                            <p class="section-desc">Global system configurations and modes.</p>
                        </div>
                    </div>

                    <div class="settings-card">
                        <div class="card-header-v2">
                            <h3 class="card-title-v2">General Configuration</h3>
                        </div>
                        <div class="card-body-v2">
                            <form id="systemSettingsForm">
                                <div class="row g-4">
                                    <div class="col-md-12">
                                        <div
                                            class="form-group-v2 d-flex align-items-center justify-content-between border p-3 rounded mb-3">
                                            <div>
                                                <label class="form-label-v2 mb-0" for="aiEnabled">Global AI
                                                    Enabled</label>
                                                <div class="form-text-v2 mt-0">Master switch for all AI processing.
                                                </div>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="aiEnabled">
                                                <span class="toggle-slider"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div
                                            class="form-group-v2 d-flex align-items-center justify-content-between border p-3 rounded">
                                            <div>
                                                <label class="form-label-v2 mb-0" for="enableChatHistory">Record Chat
                                                    History</label>
                                                <div class="form-text-v2 mt-0">Save user conversations to database.
                                                </div>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="enableChatHistory">
                                                <span class="toggle-slider"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div
                                            class="form-group-v2 d-flex align-items-center justify-content-between border p-3 rounded">
                                            <div>
                                                <label class="form-label-v2 mb-0" for="enableAdminNotifications">Admin
                                                    Notifications</label>
                                                <div class="form-text-v2 mt-0">Notify admins on new messages.</div>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="enableAdminNotifications">
                                                <span class="toggle-slider"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-v2">
                                            <label class="form-label-v2" for="systemMode">System Mode</label>
                                            <select class="form-control-v2" id="systemMode">
                                                <option value="production">Production</option>
                                                <option value="development">Development</option>
                                                <option value="maintenance">Maintenance</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12 text-end">
                                        <button type="submit" class="btn-v2 btn-v2-primary">
                                            <i class="fas fa-save"></i> Save Changes
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

                <!-- Security Settings Section -->
                <section id="security-settings" class="settings-section d-none">
                    <div class="section-header">
                        <div>
                            <h2 class="section-title">Security & Filtering</h2>
                            <p class="section-desc">Manage content filters and access security.</p>
                        </div>
                    </div>

                    <div class="settings-card">
                        <div class="card-header-v2">
                            <h3 class="card-title-v2">Content Filtering</h3>
                        </div>
                        <div class="card-body-v2">
                            <form id="securitySettingsForm">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div
                                            class="form-group-v2 d-flex align-items-center justify-content-between border p-3 rounded">
                                            <div>
                                                <label class="form-label-v2 mb-0" for="enableMessageFiltering">Enable
                                                    Filtering</label>
                                                <div class="form-text-v2 mt-0">Filter sensitive or banned words.</div>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="enableMessageFiltering">
                                                <span class="toggle-slider"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div
                                            class="form-group-v2 d-flex align-items-center justify-content-between border p-3 rounded">
                                            <div>
                                                <label class="form-label-v2 mb-0" for="enableStrictFiltering">Strict
                                                    Mode</label>
                                                <div class="form-text-v2 mt-0">More aggressive filtering rules.</div>
                                            </div>
                                            <div class="toggle-switch">
                                                <input type="checkbox" id="enableStrictFiltering">
                                                <span class="toggle-slider"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group-v2">
                                            <label class="form-label-v2" for="hiddenWords">Hidden Words (One per
                                                line)</label>
                                            <textarea class="form-control-v2" id="hiddenWords" rows="5"
                                                placeholder="Enter words to hide..."></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-v2">
                                            <label class="form-label-v2" for="replacementText">Replacement Text</label>
                                            <input type="text" class="form-control-v2" id="replacementText"
                                                placeholder="[Hidden]">
                                        </div>
                                    </div>
                                    <div class="col-12 text-end">
                                        <button type="submit" class="btn-v2 btn-v2-primary">
                                            <i class="fas fa-save"></i> Save Changes
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

            </main>
        </div>

        <!-- Modals (Reusing existing partials for now to ensure functionality) -->
        <!-- We might need to adjust them if they rely on old classes, but let's try to load them hidden -->
        <div style="display:none;">
            <%- include('partials/modals/line-bot-modal') %>
                <%- include('partials/modals/facebook-bot-modal') %>
        </div>
        <!-- Re-enable display for modals when triggered via JS bootstrap -->

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/admin-settings-v2.js"></script>
        <!-- Load legacy scripts for modal functionality if needed, but be careful of conflicts -->
        <!-- Ideally we should refactor modal logic into shared files or V2 specific -->
</body>

</html>