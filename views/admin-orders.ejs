      function escapeHtml(str) {
        if (!str) return '';
        return String(str).replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
      }


      // ========== AI Model Settings ==========
      let aiSettingsPages = [];
      let selectedPageKey = null;

      async function loadAISettings() {
        try {
          // Load extraction mode
          const modeRes = await fetch('/api/settings');
          const modeData = await modeRes.json();
          const rawMode = modeData && (modeData.orderExtractionMode || (modeData.settings && modeData.settings.orderExtractionMode));
          const currentMode = rawMode === 'scheduled' || rawMode === 'realtime' ? rawMode : 'scheduled';
          document.getElementById(currentMode === 'scheduled' ? 'modeScheduled' : 'modeRealtime').checked = true;

          // Load pages
          const pagesRes = await fetch('/admin/orders/pages');
          const pagesData = await pagesRes.json();

          if (pagesData.success && pagesData.pages) {
            aiSettingsPages = pagesData.pages;
            renderAISettingsPageDropdown();
          }
        } catch (e) {
          console.error('Load AI settings error:', e);
        }
      }

      // Save extraction mode on change
      document.querySelectorAll('input[name="extractionMode"]').forEach(radio => {
        radio.addEventListener('change', async function () {
          const mode = this.value;
          try {
            await fetch('/admin/orders/settings/scheduling', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ mode })
            });
          } catch (e) { console.error(e); }
        });
      });

      function renderAISettingsPageDropdown() {
        const select = document.getElementById('aiSettingsPageSelect');
        if (!select) return;

        select.innerHTML = '<option value="">-- ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏û‡∏à‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ --</option>' +
          aiSettingsPages.map(page => {
            const icon = page.platform === 'facebook' ? 'üìò' : 'üíö';
            const label = page.name || page.pageKey || 'Unknown';
            return `<option value="${page.pageKey}" data-platform="${page.platform}" data-bot-id="${page.botId || ''}">${icon} ${escapeHtml(label)}</option>`;
          }).join('');
      }

      function showPageSettings(pageKey) {
        const page = aiSettingsPages.find(p => p.pageKey === pageKey);
        const panel = document.getElementById('aiSettingsPanel');
        const empty = document.getElementById('aiSettingsEmpty');

        if (!page) {
          panel.style.display = 'none';
          empty.style.display = 'block';
          selectedPageKey = null;
          return;
        }

        selectedPageKey = pageKey;
        panel.style.display = 'block';
        empty.style.display = 'none';

        // Update display
        document.getElementById('aiSettingsPageName').textContent = page.name || pageKey;
        const platformBadge = document.getElementById('aiSettingsPagePlatform');
        platformBadge.textContent = page.platform === 'facebook' ? 'Facebook' : 'LINE';
        platformBadge.className = page.platform === 'facebook' ? 'badge bg-primary' : 'badge bg-success';

        // Set values
        document.getElementById('aiSettingsEnabled').checked = page.orderExtractionEnabled !== false;
        document.getElementById('aiSettingsModel').value = page.orderModel || 'gpt-4.1-nano';
        document.getElementById('aiSettingsPrompt').value = page.orderPromptInstructions || '';

        const audit = page.orderAudit || {};
        document.getElementById('auditSettingsEnabled').checked = audit.enabled === true;
        document.getElementById('auditSettingsWaitSeconds').value =
          typeof audit.waitForMainAiSeconds === 'number' ? audit.waitForMainAiSeconds : 60;
        document.getElementById('auditSettingsAskTemplate').value = audit.askMissingTemplate || '';
        document.getElementById('auditSettingsSummaryTemplate').value = audit.summaryTemplate || '';
      }

		      async function savePageAISettings() {
		        const page = aiSettingsPages.find(p => p.pageKey === selectedPageKey);
		        if (!page) return;
	
	        const showInlineError = (message) => {
	          const msg = message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î';
