	            window.showToast(msg, 'error');
	          } else {
	            alert(msg);
	          }
	        };

        const enabled = document.getElementById('aiSettingsEnabled').checked;
        const orderModel = document.getElementById('aiSettingsModel').value;
        const prompt = document.getElementById('aiSettingsPrompt').value.trim();

        const auditEnabled = document.getElementById('auditSettingsEnabled').checked;
        const auditWaitSecondsRaw = parseInt(document.getElementById('auditSettingsWaitSeconds').value, 10);
        const auditAskTemplate = document.getElementById('auditSettingsAskTemplate').value;
        const auditSummaryTemplate = document.getElementById('auditSettingsSummaryTemplate').value;

        const safeInt = (value, fallback) => Number.isFinite(value) ? value : fallback;

        const orderAudit = {
          enabled: auditEnabled,
          waitForMainAiSeconds: safeInt(auditWaitSecondsRaw, 60),
          askMissingTemplate: auditAskTemplate,
          summaryTemplate: auditSummaryTemplate
        };

        const btn = document.getElementById('aiSettingsSaveBtn');
        btn.disabled = true;
