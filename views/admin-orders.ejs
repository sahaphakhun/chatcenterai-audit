        try {
          const res = await fetch('/admin/orders/pages/ai-settings', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              pageKey: page.pageKey,
              platform: page.platform,
              botId: page.botId,
              orderExtractionEnabled: enabled,
              orderModel: orderModel,
              orderPromptInstructions: prompt
            })
          });
          const data = await res.json();

          if (!data.success) {
            throw new Error(data.error || '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ AI ‡πÑ‡∏î‡πâ');
          }

          const auditRes = await fetch('/admin/orders/pages/audit-settings', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              pageKey: page.pageKey,
              platform: page.platform,
              botId: page.botId,
              orderAudit
            })
          });
          const auditData = await auditRes.json();

          if (!auditData.success) {
            throw new Error(auditData.error || '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ Order Audit ‡πÑ‡∏î‡πâ');
          }

          btn.innerHTML = '<i class="fas fa-check me-1"></i> ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÅ‡∏•‡πâ‡∏ß';
          // Update local data
          page.orderExtractionEnabled = enabled;
          page.orderModel = orderModel;
          page.orderPromptInstructions = prompt;
          page.orderAudit = auditData.orderAudit || orderAudit;
          setTimeout(() => {
            btn.innerHTML = '<i class="fas fa-save me-1"></i> ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤';
          }, 2000);
		        } catch (e) {
		          showInlineError(e?.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å');
		          btn.innerHTML = '<i class="fas fa-save me-1"></i> ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Å‡∏≤‡∏£‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤';
		        }
		        btn.disabled = false;
		      }

      // Page select change event
      document.getElementById('aiSettingsPageSelect')?.addEventListener('change', function () {
        showPageSettings(this.value);
      });

      // Save button click event
      document.getElementById('aiSettingsSaveBtn')?.addEventListener('click', savePageAISettings);

      // AI Settings modal - load on open (from gear button)
      document.getElementById('ordersSettingsBtn')?.addEventListener('click', function (e) {
        e.preventDefault();
        // Reset state
        selectedPageKey = null;
        document.getElementById('aiSettingsPageSelect').value = '';
        document.getElementById('aiSettingsPanel').style.display = 'none';
        document.getElementById('aiSettingsEmpty').style.display = 'block';

        loadAISettings();
        const modal = new bootstrap.Modal(document.getElementById('ordersAISettingsModal'));
        modal.show();
      });
    </script>
