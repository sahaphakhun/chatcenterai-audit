<!DOCTYPE html>
<html lang="th">

<head>
    <% const isNewItem=typeof isNew !=='undefined' ? isNew : false; %>
        <% const pageTitle=isNewItem ? 'สร้างชุดข้อมูล' : 'แก้ไขชุดข้อมูล' ; %>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>
                <%= pageTitle %> - <%= instruction.parentInstructionName || instruction.title || 'ไม่มีชื่อ' %>
            </title>

            <!-- Bootstrap & Icons -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

            <!-- Jspreadsheet CE -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jspreadsheet-ce@4/dist/jspreadsheet.min.css"
                type="text/css" />
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jsuites@5/dist/jsuites.min.css" type="text/css" />

            <!-- Custom Styles -->
            <link href="/css/style.css" rel="stylesheet">
            <link href="/css/spreadsheet-v3.css" rel="stylesheet">
</head>

<body class="spreadsheet-editor-body">
    <!-- Top Header -->
    <header class="editor-header">
        <div class="header-left">
            <a href="/admin/dashboard" class="btn-back" title="กลับแดชบอร์ด">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="document-info">
                <div class="breadcrumb-path">
                    <span class="parent-badge">
                        <i class="fas fa-folder me-1"></i>
                        <%= instruction.parentInstructionName %>
                    </span>
                </div>
                <input type="text" id="documentTitle" class="title-input" value="<%= instruction.title || '' %>"
                    placeholder="ชื่อชุดข้อมูล...">
            </div>
        </div>
        <div class="header-center">
            <span class="save-status" id="saveStatus">
                <i class="fas fa-check-circle"></i> พร้อมใช้งาน
            </span>
        </div>
        <div class="header-right">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-outline-secondary btn-sm" id="undoBtn" title="Undo (Ctrl+Z)">
                    <i class="fas fa-undo"></i>
                </button>
                <button type="button" class="btn btn-outline-secondary btn-sm" id="redoBtn" title="Redo (Ctrl+Y)">
                    <i class="fas fa-redo"></i>
                </button>
            </div>
            <button type="button" class="btn btn-outline-secondary btn-sm me-2" id="exportBtn" title="Export">
                <i class="fas fa-download me-1"></i> Export
            </button>
            <button type="button" class="btn btn-primary" id="saveBtn">
                <i class="fas fa-save me-1"></i> บันทึก
            </button>
        </div>
    </header>

    <!-- Toolbar -->
    <div class="editor-toolbar">
        <div class="toolbar-section">
            <button class="toolbar-btn" id="insertRowAboveBtn" title="แทรกแถวด้านบน">
                <i class="fas fa-arrow-up"></i>
            </button>
            <button class="toolbar-btn" id="insertRowBelowBtn" title="แทรกแถวด้านล่าง">
                <i class="fas fa-arrow-down"></i>
            </button>
            <button class="toolbar-btn" id="deleteRowBtn" title="ลบแถว">
                <i class="fas fa-minus"></i>
            </button>
        </div>

        <div class="toolbar-divider"></div>

        <div class="toolbar-section">
            <button class="toolbar-btn" id="insertColLeftBtn" title="แทรกคอลัมน์ซ้าย">
                <i class="fas fa-arrow-left"></i>
            </button>
            <button class="toolbar-btn" id="insertColRightBtn" title="แทรกคอลัมน์ขวา">
                <i class="fas fa-arrow-right"></i>
            </button>
            <button class="toolbar-btn" id="deleteColBtn" title="ลบคอลัมน์">
                <i class="fas fa-columns"></i><i class="fas fa-times" style="font-size: 8px; margin-left: 2px;"></i>
            </button>
        </div>

        <div class="toolbar-divider"></div>

        <div class="toolbar-section">
            <button class="toolbar-btn" id="sortAZBtn" title="เรียง A → Z">
                <i class="fas fa-sort-alpha-down"></i>
            </button>
            <button class="toolbar-btn" id="sortZABtn" title="เรียง Z → A">
                <i class="fas fa-sort-alpha-up"></i>
            </button>
        </div>

        <div class="toolbar-divider"></div>

        <div class="toolbar-section">
            <button class="toolbar-btn" id="searchBtn" title="ค้นหา (Ctrl+F)">
                <i class="fas fa-search"></i>
            </button>
        </div>

        <div class="toolbar-spacer"></div>

        <div class="toolbar-section">
            <span class="toolbar-info" id="cellInfo">คลิกเซลล์เพื่อแก้ไข</span>
        </div>
    </div>

    <!-- Formula Bar -->
    <div class="formula-bar">
        <div class="cell-reference">
            <input type="text" id="cellReference" value="A1" readonly>
        </div>
        <div class="formula-icon">
            <i class="fas fa-font"></i>
        </div>
        <div class="formula-input">
            <input type="text" id="formulaInput" placeholder="เนื้อหาเซลล์...">
        </div>
    </div>

    <!-- Spreadsheet Container -->
    <div id="spreadsheet-container" class="spreadsheet-container"></div>

    <!-- Status Bar -->
    <footer class="editor-statusbar">
        <div class="status-left">
            <span class="status-item" id="dataTypeStatus">
                <i class="fas fa-table"></i> ตาราง
            </span>
        </div>
        <div class="status-center">
            <span class="status-item" id="selectionStatus">
                <i class="fas fa-crosshairs"></i> เลือก: -
            </span>
        </div>
        <div class="status-right">
            <span class="status-item" id="dimensionStatus">
                <i class="fas fa-th"></i> <span id="rowCount">0</span> แถว × <span id="colCount">0</span> คอลัมน์
            </span>
            <span class="status-item">
                <span class="zoom-controls">
                    <button id="zoomOutBtn" class="zoom-btn">−</button>
                    <span id="zoomLevel">100%</span>
                    <button id="zoomInBtn" class="zoom-btn">+</button>
                </span>
            </span>
        </div>
    </footer>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-search me-2"></i>ค้นหาและแทนที่</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">ค้นหา</label>
                        <input type="text" class="form-control" id="searchInput" placeholder="พิมพ์คำค้นหา...">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">แทนที่ด้วย</label>
                        <input type="text" class="form-control" id="replaceInput" placeholder="แทนที่ด้วย...">
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-outline-primary" id="findNextBtn">
                            <i class="fas fa-search me-1"></i> ค้นหาถัดไป
                        </button>
                        <button type="button" class="btn btn-primary" id="replaceBtn">
                            <i class="fas fa-exchange-alt me-1"></i> แทนที่
                        </button>
                        <button type="button" class="btn btn-warning" id="replaceAllBtn">
                            <i class="fas fa-sync me-1"></i> แทนที่ทั้งหมด
                        </button>
                    </div>
                    <div class="mt-2 text-muted small" id="searchResult"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden Form for submission -->
    <form id="saveForm" method="POST" action="<%= isNewItem 
        ? '/admin/instructions-v3/' + instructionId + '/data-items/new' 
        : '/admin/instructions-v3/' + instructionId + '/data-items/' + itemId + '/edit' %>">
        <input type="hidden" name="type" value="table">
        <input type="hidden" name="title" id="formTitle">
        <input type="hidden" name="tableData" id="formTableData">
    </form>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jsuites@5/dist/jsuites.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jspreadsheet-ce@4/dist/jspreadsheet.min.js"></script>

    <script>
        // Initial data from server
        const initialData = {
            instructionId: '<%= instructionId %>',
            itemId: '<%= itemId %>',
            isNew: <%= isNewItem %>,
            title: <% - JSON.stringify(instruction.title || '') %>,
                type: '<%= instruction.type || "table" %>',
                    tableData: <% - JSON.stringify(instruction.data || null) %>
        };

        // Spreadsheet instance
        let spreadsheet = null;
        let isDirty = false;
        let zoomLevel = 100;

        // Convert data format
        function convertToJspreadsheetData(data) {
            if (!data || !data.columns || !data.rows) {
                return {
                    columns: [
                        { title: 'คอลัมน์ 1', width: 200 },
                        { title: 'คอลัมน์ 2', width: 200 }
                    ],
                    data: [['', ''], ['', ''], ['', '']]
                };
            }

            const columns = data.columns.map((col, idx) => ({
                title: col || `คอลัมน์ ${idx + 1}`,
                width: 200
            }));

            const rows = data.rows.length > 0 ? data.rows : [new Array(columns.length).fill('')];

            return { columns, data: rows };
        }

        // Convert back to our format
        function convertFromJspreadsheet() {
            if (!spreadsheet) return null;

            const headers = spreadsheet.getHeaders().split(',');
            const data = spreadsheet.getData();

            // Filter empty rows
            const filteredRows = data.filter(row => row.some(cell => cell !== '' && cell !== null));

            return {
                columns: headers,
                rows: filteredRows.length > 0 ? filteredRows : data
            };
        }

        // Update status
        function updateSaveStatus(status, type = 'info') {
            const el = document.getElementById('saveStatus');
            const icons = {
                'info': 'fa-check-circle',
                'saving': 'fa-spinner fa-spin',
                'saved': 'fa-check-circle',
                'error': 'fa-exclamation-circle',
                'dirty': 'fa-circle'
            };
            el.innerHTML = `<i class="fas ${icons[type] || icons.info}"></i> ${status}`;
            el.className = `save-status status-${type}`;
        }

        // Update cell info
        function updateCellInfo(x, y) {
            const colLabel = jspreadsheet.getColumnName(x);
            const cellRef = `${colLabel}${y + 1}`;
            document.getElementById('cellReference').value = cellRef;
            document.getElementById('selectionStatus').innerHTML = `<i class="fas fa-crosshairs"></i> เลือก: ${cellRef}`;

            // Update formula bar
            const value = spreadsheet.getValue(`${colLabel}${y + 1}`) || '';
            document.getElementById('formulaInput').value = value;
        }

        // Update dimensions
        function updateDimensions() {
            const data = spreadsheet.getData();
            const headers = spreadsheet.getHeaders().split(',');
            document.getElementById('rowCount').textContent = data.length;
            document.getElementById('colCount').textContent = headers.length;
        }

        // Show toast
        function showToast(message, type = 'info') {
            const existing = document.querySelector('.toast-notification');
            if (existing) existing.remove();

            const toast = document.createElement('div');
            toast.className = `toast-notification toast-${type}`;
            toast.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-times-circle' : 'fa-info-circle'}"></i>
                <span>${message}</span>
            `;
            document.body.appendChild(toast);

            setTimeout(() => {
                toast.classList.add('fade-out');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Save function
        async function saveData(showMessage = true) {
            const title = document.getElementById('documentTitle').value.trim();

            if (!title) {
                showToast('กรุณาระบุชื่อชุดข้อมูล', 'error');
                document.getElementById('documentTitle').focus();
                return false;
            }

            updateSaveStatus('กำลังบันทึก...', 'saving');

            try {
                const tableData = convertFromJspreadsheet();

                document.getElementById('formTitle').value = title;
                document.getElementById('formTableData').value = JSON.stringify(tableData);

                document.getElementById('saveForm').submit();
                return true;
            } catch (error) {
                console.error('Save error:', error);
                updateSaveStatus('เกิดข้อผิดพลาด', 'error');
                showToast('ไม่สามารถบันทึกได้: ' + error.message, 'error');
                return false;
            }
        }

        // Initialize spreadsheet
        function initSpreadsheet() {
            const container = document.getElementById('spreadsheet-container');
            const converted = convertToJspreadsheetData(initialData.tableData);

            spreadsheet = jspreadsheet(container, {
                data: converted.data,
                columns: converted.columns,

                // Features
                search: true,
                pagination: false,
                allowInsertRow: true,
                allowInsertColumn: true,
                allowDeleteRow: true,
                allowDeleteColumn: true,
                allowRenameColumn: true,
                columnSorting: true,
                columnDrag: true,
                rowDrag: true,

                // Context menu
                contextMenu: function (el, x, y, e) {
                    const items = [];

                    if (y !== null) {
                        // Row context menu
                        items.push({
                            title: 'แทรกแถวด้านบน',
                            onclick: function () {
                                spreadsheet.insertRow(1, y, true);
                            }
                        });
                        items.push({
                            title: 'แทรกแถวด้านล่าง',
                            onclick: function () {
                                spreadsheet.insertRow(1, y);
                            }
                        });
                        items.push({ type: 'line' });
                        items.push({
                            title: 'ลบแถวนี้',
                            onclick: function () {
                                spreadsheet.deleteRow(y);
                            }
                        });
                    }

                    if (x !== null) {
                        if (items.length > 0) items.push({ type: 'line' });
                        items.push({
                            title: 'แทรกคอลัมน์ซ้าย',
                            onclick: function () {
                                spreadsheet.insertColumn(1, x, true);
                            }
                        });
                        items.push({
                            title: 'แทรกคอลัมน์ขวา',
                            onclick: function () {
                                spreadsheet.insertColumn(1, x);
                            }
                        });
                        items.push({ type: 'line' });
                        items.push({
                            title: 'ลบคอลัมน์นี้',
                            onclick: function () {
                                spreadsheet.deleteColumn(x);
                            }
                        });
                    }

                    items.push({ type: 'line' });
                    items.push({
                        title: 'คัดลอก',
                        shortcut: 'Ctrl+C',
                        onclick: function () {
                            spreadsheet.copy();
                        }
                    });
                    items.push({
                        title: 'วาง',
                        shortcut: 'Ctrl+V',
                        onclick: function () {
                            spreadsheet.paste();
                        }
                    });

                    return items;
                },

                // Callbacks
                onchange: function (instance, cell, x, y, value) {
                    isDirty = true;
                    updateSaveStatus('มีการเปลี่ยนแปลง', 'dirty');
                    updateDimensions();
                },

                onselection: function (instance, x1, y1, x2, y2) {
                    updateCellInfo(x1, y1);
                },

                oninsertrow: function () {
                    isDirty = true;
                    updateSaveStatus('มีการเปลี่ยนแปลง', 'dirty');
                    updateDimensions();
                },

                oninsertcolumn: function () {
                    isDirty = true;
                    updateSaveStatus('มีการเปลี่ยนแปลง', 'dirty');
                    updateDimensions();
                },

                ondeleterow: function () {
                    isDirty = true;
                    updateSaveStatus('มีการเปลี่ยนแปลง', 'dirty');
                    updateDimensions();
                },

                ondeletecolumn: function () {
                    isDirty = true;
                    updateSaveStatus('มีการเปลี่ยนแปลง', 'dirty');
                    updateDimensions();
                },

                // Table dimensions
                tableOverflow: true,
                tableWidth: '100%',
                tableHeight: 'calc(100vh - 180px)',

                // Default column width
                defaultColWidth: 200,

                // Row height
                defaultRowHeight: 40,

                // Allow HTML
                parseFormulas: false,

                // Style
                style: {},
            });

            // Initial update
            updateDimensions();
        }

        // Bind toolbar events
        function bindToolbarEvents() {
            // Row operations
            document.getElementById('insertRowAboveBtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.insertRow(1, sel[0][1], true);
                } else {
                    spreadsheet.insertRow(1, 0, true);
                }
            });

            document.getElementById('insertRowBelowBtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.insertRow(1, sel[0][1]);
                } else {
                    spreadsheet.insertRow();
                }
            });

            document.getElementById('deleteRowBtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.deleteRow(sel[0][1]);
                }
            });

            // Column operations
            document.getElementById('insertColLeftBtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.insertColumn(1, sel[0][0], true);
                } else {
                    spreadsheet.insertColumn(1, 0, true);
                }
            });

            document.getElementById('insertColRightBtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.insertColumn(1, sel[0][0]);
                } else {
                    spreadsheet.insertColumn();
                }
            });

            document.getElementById('deleteColBtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.deleteColumn(sel[0][0]);
                }
            });

            // Sorting
            document.getElementById('sortAZBtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.orderBy(sel[0][0], 0);
                }
            });

            document.getElementById('sortZABtn').addEventListener('click', () => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    spreadsheet.orderBy(sel[0][0], 1);
                }
            });

            // Search
            document.getElementById('searchBtn').addEventListener('click', () => {
                const modal = new bootstrap.Modal(document.getElementById('searchModal'));
                modal.show();
            });

            // Find operations
            let searchResults = [];
            let searchIndex = 0;

            document.getElementById('findNextBtn').addEventListener('click', () => {
                const query = document.getElementById('searchInput').value;
                if (!query) return;

                searchResults = spreadsheet.search(query);
                if (searchResults.length > 0) {
                    searchIndex = (searchIndex + 1) % searchResults.length;
                    const result = searchResults[searchIndex];
                    spreadsheet.updateSelectionFromCoords(result[0], result[1], result[0], result[1]);
                    document.getElementById('searchResult').textContent = `พบ ${searchResults.length} รายการ (${searchIndex + 1}/${searchResults.length})`;
                } else {
                    document.getElementById('searchResult').textContent = 'ไม่พบข้อมูล';
                }
            });

            document.getElementById('replaceBtn').addEventListener('click', () => {
                const query = document.getElementById('searchInput').value;
                const replacement = document.getElementById('replaceInput').value;
                if (!query) return;

                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    const x = sel[0][0], y = sel[0][1];
                    const currentValue = spreadsheet.getValue(jspreadsheet.getColumnName(x) + (y + 1));
                    if (currentValue && currentValue.includes(query)) {
                        spreadsheet.setValue(jspreadsheet.getColumnName(x) + (y + 1), currentValue.replace(query, replacement));
                        showToast('แทนที่เรียบร้อย', 'success');
                    }
                }
            });

            document.getElementById('replaceAllBtn').addEventListener('click', () => {
                const query = document.getElementById('searchInput').value;
                const replacement = document.getElementById('replaceInput').value;
                if (!query) return;

                const data = spreadsheet.getData();
                let count = 0;

                for (let y = 0; y < data.length; y++) {
                    for (let x = 0; x < data[y].length; x++) {
                        if (data[y][x] && data[y][x].includes(query)) {
                            const cellName = jspreadsheet.getColumnName(x) + (y + 1);
                            spreadsheet.setValue(cellName, data[y][x].replaceAll(query, replacement));
                            count++;
                        }
                    }
                }

                document.getElementById('searchResult').textContent = `แทนที่ ${count} รายการ`;
                showToast(`แทนที่ ${count} รายการ`, 'success');
            });

            // Undo/Redo
            document.getElementById('undoBtn').addEventListener('click', () => {
                spreadsheet.undo();
            });

            document.getElementById('redoBtn').addEventListener('click', () => {
                spreadsheet.redo();
            });

            // Save
            document.getElementById('saveBtn').addEventListener('click', saveData);

            // Export
            document.getElementById('exportBtn').addEventListener('click', () => {
                spreadsheet.download();
            });

            // Zoom
            document.getElementById('zoomInBtn').addEventListener('click', () => {
                if (zoomLevel < 150) {
                    zoomLevel += 10;
                    document.getElementById('spreadsheet-container').style.transform = `scale(${zoomLevel / 100})`;
                    document.getElementById('spreadsheet-container').style.transformOrigin = 'top left';
                    document.getElementById('zoomLevel').textContent = `${zoomLevel}%`;
                }
            });

            document.getElementById('zoomOutBtn').addEventListener('click', () => {
                if (zoomLevel > 50) {
                    zoomLevel -= 10;
                    document.getElementById('spreadsheet-container').style.transform = `scale(${zoomLevel / 100})`;
                    document.getElementById('spreadsheet-container').style.transformOrigin = 'top left';
                    document.getElementById('zoomLevel').textContent = `${zoomLevel}%`;
                }
            });

            // Formula bar sync
            document.getElementById('formulaInput').addEventListener('change', (e) => {
                const sel = spreadsheet.getSelected();
                if (sel && sel.length) {
                    const cellName = jspreadsheet.getColumnName(sel[0][0]) + (sel[0][1] + 1);
                    spreadsheet.setValue(cellName, e.target.value);
                }
            });

            // Title change
            document.getElementById('documentTitle').addEventListener('input', () => {
                isDirty = true;
                updateSaveStatus('มีการเปลี่ยนแปลง', 'dirty');
            });
        }

        // Keyboard shortcuts
        function bindKeyboardShortcuts() {
            document.addEventListener('keydown', (e) => {
                // Ctrl/Cmd + S = Save
                if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                    e.preventDefault();
                    saveData();
                }

                // Ctrl/Cmd + F = Find
                if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
                    e.preventDefault();
                    const modal = new bootstrap.Modal(document.getElementById('searchModal'));
                    modal.show();
                }
            });
        }

        // Warn before leaving
        window.addEventListener('beforeunload', (e) => {
            if (isDirty) {
                e.preventDefault();
                e.returnValue = '';
                return '';
            }
        });

        // Initialize on DOM ready
        document.addEventListener('DOMContentLoaded', () => {
            initSpreadsheet();
            bindToolbarEvents();
            bindKeyboardShortcuts();

            // Check for URL parameters
            const params = new URLSearchParams(window.location.search);
            if (params.get('success')) {
                showToast(params.get('success'), 'success');
            }
            if (params.get('error')) {
                showToast(params.get('error'), 'error');
            }
        });
    </script>
</body>

</html>