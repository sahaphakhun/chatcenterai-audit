<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>แก้ไขชุดข้อมูล - <%= instruction.title || instruction.parentInstructionName || 'ไม่มีชื่อ' %>
    </title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Jspreadsheet CE (v5 to match jsuites@5) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jspreadsheet-ce@5.0.4/dist/jspreadsheet.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jsuites@5/dist/jsuites.css">

    <!-- Main Styles -->
    <link href="/css/style.css" rel="stylesheet">

    <style>
        /* ===== Layout ===== */
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: var(--light-bg, #F6F7FB);
        }

        /* ===== Header ===== */
        .editor-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 56px;
            padding: 0 16px;
            background: var(--card-bg, #fff);
            border-bottom: 1px solid var(--border-color, #E1E5EF);
            box-shadow: var(--shadow-sm);
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .btn-back {
            width: 40px;
            height: 40px;
            border: none;
            background: transparent;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-light, #5C6372);
            text-decoration: none;
            transition: var(--transition);
        }

        .btn-back:hover {
            background: var(--light-bg);
            color: var(--primary);
        }

        .parent-badge {
            display: inline-flex;
            align-items: center;
            padding: 4px 12px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: #fff;
            font-size: var(--font-size-sm);
            font-weight: 500;
            border-radius: 16px;
        }

        .title-input {
            border: none;
            font-size: var(--font-size-xl);
            font-weight: 600;
            font-family: var(--font-family-heading);
            padding: 4px 8px;
            border-radius: 6px;
            min-width: 200px;
            background: transparent;
            color: var(--text-dark);
        }

        .title-input:hover,
        .title-input:focus {
            background: var(--light-bg);
            outline: none;
        }

        .save-status {
            font-size: var(--font-size-sm);
            color: var(--text-light);
            padding: 4px 12px;
            border-radius: 16px;
            background: var(--light-bg);
        }

        .save-status.dirty {
            background: rgba(var(--warning-rgb, 223, 169, 75), 0.15);
            color: var(--warning);
        }

        .save-status.saving {
            background: rgba(var(--info-rgb, 61, 127, 193), 0.15);
            color: var(--info);
        }

        .save-status.saved {
            background: rgba(var(--success-rgb, 45, 143, 111), 0.15);
            color: var(--success);
        }

        /* ===== Toolbar ===== */
        .editor-toolbar {
            display: flex;
            align-items: center;
            height: 42px;
            padding: 0 12px;
            background: var(--card-bg, #fff);
            border-bottom: 1px solid var(--border-color);
            gap: 4px;
        }

        .toolbar-btn {
            width: 34px;
            height: 34px;
            border: none;
            background: transparent;
            border-radius: 6px;
            cursor: pointer;
            color: var(--text-light);
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .toolbar-btn:hover {
            background: var(--light-bg);
            color: var(--primary);
        }

        .toolbar-divider {
            width: 1px;
            height: 24px;
            background: var(--border-color);
            margin: 0 8px;
        }

        .toolbar-spacer {
            flex: 1;
        }

        .toolbar-info {
            font-size: var(--font-size-sm);
            color: var(--text-light);
            padding: 4px 12px;
            background: var(--light-bg);
            border-radius: 6px;
            border: 1px solid var(--border-color);
        }

        /* ===== Spreadsheet ===== */
        .spreadsheet-wrapper {
            flex: 1;
            overflow: auto;
            background: #fff;
        }

        /* ===== Status Bar ===== */
        .editor-statusbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 28px;
            background: var(--light-bg);
            border-top: 1px solid var(--border-color);
            padding: 0 12px;
            font-size: var(--meta-size);
            color: var(--text-light);
        }

        /* ===== Toast ===== */
        .toast-msg {
            position: fixed;
            bottom: 24px;
            left: 50%;
            transform: translateX(-50%);
            padding: 12px 20px;
            background: var(--text-dark);
            color: #fff;
            border-radius: var(--border-radius);
            font-size: var(--font-size-base);
            z-index: 9999;
            box-shadow: var(--shadow-lg);
            animation: slideUp 0.3s ease;
        }

        .toast-msg.success {
            background: var(--success);
        }

        .toast-msg.error {
            background: var(--danger);
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateX(-50%) translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }
        }

        /* ===== Jspreadsheet Overrides ===== */
        .jexcel {
            font-family: var(--font-family-base) !important;
            font-size: var(--font-size-base) !important;
        }

        .jexcel>thead>tr>td {
            background: linear-gradient(180deg, var(--light-bg) 0%, #e8eaef 100%) !important;
            font-weight: 600 !important;
            color: var(--text-dark) !important;
            border-color: var(--border-color) !important;
        }

        .jexcel>tbody>tr>td {
            border-color: var(--border-color) !important;
            color: var(--text-dark) !important;
            white-space: pre-wrap !important;
            word-break: break-word;
        }

        .jexcel>tbody>tr>td:first-child {
            background: var(--light-bg) !important;
            font-weight: 600 !important;
            color: var(--text-light) !important;
        }

        .jexcel>tbody>tr:hover>td {
            background: rgba(var(--primary-rgb), 0.05) !important;
        }

        .jexcel>tbody>tr>td.highlight,
        .jexcel>tbody>tr>td.selected {
            background: rgba(var(--primary-rgb), 0.12) !important;
        }

        .jexcel_corner {
            background: var(--primary) !important;
        }

        /* ===== Row Resizer - Real-time like Column Resize ===== */
        .jexcel>tbody>tr>td:first-child {
            position: relative !important;
        }

        .row-resize-handle {
            position: absolute;
            left: 0;
            right: 0;
            bottom: -3px;
            height: 6px;
            cursor: row-resize;
            z-index: 10;
            background: transparent;
            transition: background 0.15s ease;
        }

        .row-resize-handle:hover,
        .row-resize-handle.active {
            background: rgba(var(--primary-rgb, 59, 130, 246), 0.3);
        }

        .row-resize-handle::after {
            content: '';
            position: absolute;
            left: 50%;
            bottom: 2px;
            transform: translateX(-50%);
            width: 20px;
            height: 2px;
            background: var(--primary, #3b82f6);
            border-radius: 2px;
            opacity: 0;
            transition: opacity 0.15s ease;
        }

        .row-resize-handle:hover::after,
        .row-resize-handle.active::after {
            opacity: 1;
        }

        /* Resize guide line */
        .row-resize-guide {
            position: fixed;
            left: 0;
            right: 0;
            height: 2px;
            background: var(--primary, #3b82f6);
            pointer-events: none;
            z-index: 9999;
            box-shadow: 0 0 4px rgba(var(--primary-rgb, 59, 130, 246), 0.5);
        }

        /* Prevent text selection during resize */
        body.resizing-row {
            cursor: row-resize !important;
            user-select: none !important;
        }

        body.resizing-row * {
            cursor: row-resize !important;
        }

        /* Context menu */
        .jcontextmenu {
            font-family: var(--font-family-base) !important;
            border-radius: var(--border-radius) !important;
            box-shadow: var(--shadow-lg) !important;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <header class="editor-header">
        <div class="header-left">
            <a href="/admin/dashboard" class="btn-back"><i class="fas fa-arrow-left"></i></a>
            <div>
                <span class="parent-badge"><i class="fas fa-folder me-1"></i>
                    <%= instruction.parentInstructionName %>
                </span>
                <div style="margin-top: 4px;">
                    <input type="text" id="docTitle" class="title-input" value="<%= instruction.title || '' %>"
                        placeholder="ชื่อชุดข้อมูล...">
                </div>
            </div>
        </div>
        <span class="save-status" id="saveStatus"><i class="fas fa-check-circle me-1"></i>พร้อมใช้งาน</span>
        <div>
            <button class="btn btn-outline-secondary btn-sm me-2" id="exportBtn"><i
                    class="fas fa-download me-1"></i>Export</button>
            <button class="btn btn-primary" id="saveBtn"><i class="fas fa-save me-1"></i>บันทึก</button>
        </div>
    </header>

    <!-- Toolbar -->
    <div class="editor-toolbar">
        <button class="toolbar-btn" id="undoBtn" title="Undo (Ctrl+Z)"><i class="fas fa-undo"></i></button>
        <button class="toolbar-btn" id="redoBtn" title="Redo (Ctrl+Y)"><i class="fas fa-redo"></i></button>
        <div class="toolbar-divider"></div>
        <button class="toolbar-btn" id="addRowBtn" title="เพิ่มแถว"><i class="fas fa-plus"></i></button>
        <button class="toolbar-btn" id="delRowBtn" title="ลบแถว"><i class="fas fa-minus"></i></button>
        <div class="toolbar-divider"></div>
        <button class="toolbar-btn" id="addColBtn" title="เพิ่มคอลัมน์"><i class="fas fa-columns"></i></button>
        <button class="toolbar-btn" id="delColBtn" title="ลบคอลัมน์"><i class="fas fa-times"></i></button>
        <div class="toolbar-spacer"></div>
        <span class="toolbar-info" id="cellInfo">คลิกเซลล์เพื่อแก้ไข</span>
    </div>

    <!-- Spreadsheet -->
    <div id="spreadsheet" class="spreadsheet-wrapper"></div>

    <!-- Status Bar -->
    <footer class="editor-statusbar">
        <span><i class="fas fa-table me-1"></i>ตาราง</span>
        <span id="selInfo"><i class="fas fa-crosshairs me-1"></i>เลือก: -</span>
        <span><i class="fas fa-th me-1"></i><span id="rowCount">0</span> แถว × <span id="colCount">0</span>
            คอลัมน์</span>
    </footer>

    <!-- Form -->
    <form id="saveForm" method="POST"
        action="<%= typeof isNew !== 'undefined' && isNew ? '/admin/instructions-v3/' + instructionId + '/data-items/new' : '/admin/instructions-v3/' + instructionId + '/data-items/' + itemId + '/edit' %>">
        <input type="hidden" name="type" value="table">
        <input type="hidden" name="title" id="frmTitle">
        <input type="hidden" name="tableData" id="frmTableData">
    </form>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jsuites@5/dist/jsuites.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jspreadsheet-ce@5.0.4/dist/index.js"></script>

    <!-- Server Data -->
    <script id="serverDataScript" type="application/json"><%- JSON.stringify(instruction.data || null) %></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // ===== DATA FROM SERVER =====
            var serverData = null;
            try {
                var dataEl = document.getElementById('serverDataScript');
                if (dataEl && dataEl.textContent) {
                    serverData = JSON.parse(dataEl.textContent);
                }
            } catch (e) {
                console.error('Parse error:', e);
            }

            console.log('=== V3 Spreadsheet Editor ===');
            console.log('Server data:', serverData);

            // ===== CONVERT DATA =====
            function toJsData(data) {
                if (!data || !data.columns || !data.rows) {
                    return {
                        columns: [
                            { title: 'คอลัมน์ 1', width: 200, wordWrap: true },
                            { title: 'คอลัมน์ 2', width: 200, wordWrap: true },
                            { title: 'คอลัมน์ 3', width: 200, wordWrap: true }
                        ],
                        data: [['', '', ''], ['', '', ''], ['', '', '']]
                    };
                }

                var cols = data.columns.map(function (c, i) {
                    return { title: c || 'คอลัมน์ ' + (i + 1), width: 200, wordWrap: true };
                });

                var rows = data.rows && data.rows.length > 0 ? data.rows : [[]];

                return { columns: cols, data: rows };
            }

            function fromJsData(sheet) {
                var headers = sheet.getHeaders().split(',');
                var data = sheet.getData();
                return { columns: headers, rows: data };
            }

            // ===== INIT SPREADSHEET =====
            var converted = toJsData(serverData);
            console.log('Converted:', converted);

            if (typeof jspreadsheet === 'undefined') {
                console.error('jspreadsheet library failed to load');
                var container = document.getElementById('spreadsheet');
                container.innerHTML = '<div class="p-3 text-danger">ไม่สามารถโหลดตัวแก้ไขตารางได้ กรุณารีเฟรชหรือเชื่อมต่ออินเทอร์เน็ต</div>';
                return;
            }

            var sheetConfig = {
                data: converted.data,
                columns: converted.columns,
                search: true,
                allowInsertRow: true,
                allowInsertColumn: true,
                allowDeleteRow: true,
                allowDeleteColumn: true,
                allowRenameColumn: true,
                columnSorting: true,
                columnDrag: true,
                rowDrag: true,
                contextMenu: true,
                tableOverflow: true,
                tableWidth: '100%',
                defaultColWidth: 200,
                onchange: function () {
                    setDirty(true);
                    updateDimensions();
                },
                onselection: function (el, x1, y1) {
                    updateCellInfo(x1, y1);
                },
                oninsertrow: function () { setDirty(true); updateDimensions(); },
                ondeleterow: function () { setDirty(true); updateDimensions(); },
                oninsertcolumn: function () { setDirty(true); updateDimensions(); },
                ondeletecolumn: function () { setDirty(true); updateDimensions(); }
            };

            var spreadsheet = jspreadsheet(document.getElementById('spreadsheet'), {
                worksheets: [sheetConfig],
                toolbar: false
            });

            var sheet = Array.isArray(spreadsheet) ? spreadsheet[0] : spreadsheet;

            if (!sheet || typeof sheet.getData !== 'function') {
                console.error('jspreadsheet worksheet failed to initialize');
                var fallback = document.getElementById('spreadsheet');
                fallback.innerHTML = '<div class="p-3 text-danger">โหลดตัวแก้ไขตารางไม่สำเร็จ กรุณารีเฟรช</div>';
                return;
            }

            // Responsive height for the sheet content
            function applyTableHeight() {
                if (!sheet || !sheet.content) return;
                var headerH = (document.querySelector('.editor-header') || {}).offsetHeight || 0;
                var toolbarH = (document.querySelector('.editor-toolbar') || {}).offsetHeight || 0;
                var statusH = (document.querySelector('.editor-statusbar') || {}).offsetHeight || 0;
                var available = window.innerHeight - (headerH + toolbarH + statusH);
                var height = Math.max(240, available);
                sheet.content.style.height = height + 'px';
                sheet.content.style.maxHeight = height + 'px';
            }

            applyTableHeight();
            window.addEventListener('resize', applyTableHeight);

            // ===== STATE =====
            var dirty = false;

            function setDirty(val) {
                dirty = val;
                var el = document.getElementById('saveStatus');
                if (dirty) {
                    el.innerHTML = '<i class="fas fa-circle me-1"></i>มีการเปลี่ยนแปลง';
                    el.className = 'save-status dirty';
                } else {
                    el.innerHTML = '<i class="fas fa-check-circle me-1"></i>บันทึกแล้ว';
                    el.className = 'save-status saved';
                }
            }

            function updateCellInfo(x, y) {
                if (!sheet) return;
                var colName = jspreadsheet.getColumnName(x);
                var ref = colName + (y + 1);
                var val = sheet.getValue(ref) || '';
                var selInfoEl = document.getElementById('selInfo');
                var cellInfoEl = document.getElementById('cellInfo');
                if (selInfoEl) selInfoEl.innerHTML = '<i class="fas fa-crosshairs me-1"></i>เลือก: ' + ref;
                if (cellInfoEl) cellInfoEl.textContent = 'เซลล์ ' + ref + ': ' + val;
            }

            function updateDimensions() {
                if (!sheet) return;
                var data = sheet.getData();
                var headers = sheet.getHeaders().split(',');
                document.getElementById('rowCount').textContent = data.length;
                document.getElementById('colCount').textContent = headers.length;
            }

            function showToast(msg, type) {
                var old = document.querySelector('.toast-msg');
                if (old) old.remove();

                var t = document.createElement('div');
                t.className = 'toast-msg ' + (type || '');
                t.textContent = msg;
                document.body.appendChild(t);

                setTimeout(function () { t.remove(); }, 3000);
            }

            // ===== SAVE =====
            function save() {
                var title = document.getElementById('docTitle').value.trim();
                if (!title) {
                    showToast('กรุณาระบุชื่อชุดข้อมูล', 'error');
                    document.getElementById('docTitle').focus();
                    return;
                }

                var el = document.getElementById('saveStatus');
                el.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>กำลังบันทึก...';
                el.className = 'save-status saving';

                var tableData = fromJsData(sheet);

                document.getElementById('frmTitle').value = title;
                document.getElementById('frmTableData').value = JSON.stringify(tableData);
                document.getElementById('saveForm').submit();
            }

            // ===== EVENT BINDINGS =====
            document.getElementById('saveBtn').onclick = save;
            document.getElementById('exportBtn').onclick = function () { sheet.download(); };
            document.getElementById('undoBtn').onclick = function () { sheet.undo(); };
            document.getElementById('redoBtn').onclick = function () { sheet.redo(); };
            document.getElementById('addRowBtn').onclick = function () { sheet.insertRow(); };
            document.getElementById('delRowBtn').onclick = function () {
                var sel = sheet.getSelected();
                if (sel && sel.length) sheet.deleteRow(sel[0][1]);
            };
            document.getElementById('addColBtn').onclick = function () { sheet.insertColumn(); };
            document.getElementById('delColBtn').onclick = function () {
                var sel = sheet.getSelected();
                if (sel && sel.length) sheet.deleteColumn(sel[0][0]);
            };

            document.getElementById('docTitle').oninput = function () { setDirty(true); };

            // Keyboard shortcuts
            document.onkeydown = function (e) {
                if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                    e.preventDefault();
                    save();
                }
            };

            // Warn before leave
            window.onbeforeunload = function (e) {
                if (dirty) {
                    e.preventDefault();
                    return '';
                }
            };

            // Init
            updateDimensions();

            // ===== ROW RESIZE FUNCTIONALITY (Real-time like Column) =====
            var MIN_ROW_HEIGHT = 28;
            var resizingRow = null;
            var startY = 0;
            var startHeight = 0;
            var resizeGuide = null;

            function createRowResizeHandles() {
                // Remove existing handles first
                document.querySelectorAll('.row-resize-handle').forEach(function (h) { h.remove(); });

                var tbody = document.querySelector('.jexcel > tbody');
                if (!tbody) return;

                var rows = tbody.querySelectorAll('tr');
                rows.forEach(function (row, index) {
                    var firstCell = row.querySelector('td:first-child');
                    if (!firstCell) return;

                    var handle = document.createElement('div');
                    handle.className = 'row-resize-handle';
                    handle.setAttribute('data-row-index', index);
                    firstCell.appendChild(handle);

                    handle.addEventListener('mousedown', function (e) {
                        e.preventDefault();
                        e.stopPropagation();
                        startRowResize(row, index, e);
                    });
                });
            }

            function startRowResize(row, rowIndex, e) {
                resizingRow = row;
                startY = e.clientY;
                startHeight = row.offsetHeight;

                // Add active class to handle
                var handle = row.querySelector('.row-resize-handle');
                if (handle) handle.classList.add('active');

                // Create resize guide line
                resizeGuide = document.createElement('div');
                resizeGuide.className = 'row-resize-guide';
                resizeGuide.style.top = (row.getBoundingClientRect().bottom) + 'px';
                document.body.appendChild(resizeGuide);

                // Add resizing class to body
                document.body.classList.add('resizing-row');

                document.addEventListener('mousemove', onRowResize);
                document.addEventListener('mouseup', stopRowResize);
            }

            function onRowResize(e) {
                if (!resizingRow) return;

                var deltaY = e.clientY - startY;
                var newHeight = Math.max(MIN_ROW_HEIGHT, startHeight + deltaY);

                // Update row height in real-time
                resizingRow.style.height = newHeight + 'px';

                // Update all cells in the row
                resizingRow.querySelectorAll('td').forEach(function (cell) {
                    cell.style.height = newHeight + 'px';
                    cell.style.minHeight = newHeight + 'px';
                });

                // Update guide position
                if (resizeGuide) {
                    resizeGuide.style.top = (resizingRow.getBoundingClientRect().bottom) + 'px';
                }
            }

            function stopRowResize() {
                if (resizingRow) {
                    // Remove active class from handle
                    var handle = resizingRow.querySelector('.row-resize-handle');
                    if (handle) handle.classList.remove('active');

                    setDirty(true);
                }

                resizingRow = null;
                startY = 0;
                startHeight = 0;

                // Remove resize guide
                if (resizeGuide) {
                    resizeGuide.remove();
                    resizeGuide = null;
                }

                // Remove resizing class from body
                document.body.classList.remove('resizing-row');

                document.removeEventListener('mousemove', onRowResize);
                document.removeEventListener('mouseup', stopRowResize);
            }

            // Create handles after spreadsheet is ready
            setTimeout(createRowResizeHandles, 100);

            // Re-create handles when rows change
            var originalInsertRow = sheet.insertRow;
            sheet.insertRow = function () {
                var result = originalInsertRow.apply(sheet, arguments);
                setTimeout(createRowResizeHandles, 50);
                return result;
            };

            var originalDeleteRow = sheet.deleteRow;
            sheet.deleteRow = function () {
                var result = originalDeleteRow.apply(sheet, arguments);
                setTimeout(createRowResizeHandles, 50);
                return result;
            };

            // Also observe DOM changes for any dynamic row additions
            var tableObserver = new MutationObserver(function (mutations) {
                var shouldRecreate = mutations.some(function (m) {
                    return m.type === 'childList' && m.target.tagName === 'TBODY';
                });
                if (shouldRecreate) {
                    setTimeout(createRowResizeHandles, 50);
                }
            });

            var spreadsheetEl = document.getElementById('spreadsheet');
            if (spreadsheetEl) {
                tableObserver.observe(spreadsheetEl, { childList: true, subtree: true });
            }

            // URL params
            var params = new URLSearchParams(window.location.search);
            if (params.get('success')) showToast(params.get('success'), 'success');
            if (params.get('error')) showToast(params.get('error'), 'error');
        });
    </script>
</body>

</html>